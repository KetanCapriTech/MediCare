        <div class="container-fluid pt-4 px-4">
            <div class="bg-light rounded-top p-4 text-center">
                &copy; 2025 Medi-Care
            </div>
        </div>
    </div>
    <!-- Content End -->

</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="/assest/lib/owlcarousel/owl.carousel.min.js"></script>
<script src="/assest/lib/tempusdominus/js/moment.min.js"></script>
<script src="/assest/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

<script src="/assest/js/main.js"></script>

@RenderSection("Scripts", required: false)
